<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
>
  <Pen
    x:Key="IconPen"
    Brush="{DynamicResource App.Foreground}"
    Thickness="1.5"
    StartLineCap="Round"
    EndLineCap="Round"
    LineJoin="Round"
  />

  <DrawingImage x:Key="Icon.Add">
    <DrawingImage.Drawing>
      <DrawingGroup>
        <GeometryDrawing Brush="Transparent" Pen="{DynamicResource IconPen}">
          <GeometryDrawing.Geometry>
            <GeometryGroup>
              <PathGeometry Figures="M5 12h14" FillRule="NonZero"/>
              <PathGeometry Figures="M12 5v14" FillRule="NonZero"/>
            </GeometryGroup>
          </GeometryDrawing.Geometry>
        </GeometryDrawing>
      </DrawingGroup>
    </DrawingImage.Drawing>
  </DrawingImage>

  <DrawingImage x:Key="Icon.Check">
    <DrawingImage.Drawing>
      <DrawingGroup>
        <GeometryDrawing Brush="Transparent">
          <GeometryDrawing.Pen>
            <Pen
              Brush="Green"
              Thickness="1.5"
              StartLineCap="Round"
              EndLineCap="Round"
              LineJoin="Round"
            />
          </GeometryDrawing.Pen>
          <GeometryDrawing.Geometry>
            <PathGeometry Figures="M20 6 9 17l-5-5" FillRule="NonZero"/>
          </GeometryDrawing.Geometry>
        </GeometryDrawing>
      </DrawingGroup>
    </DrawingImage.Drawing>
  </DrawingImage>

  <DrawingImage x:Key="Icon.Delete">
    <DrawingImage.Drawing>
      <DrawingGroup>
        <GeometryDrawing Brush="Transparent" Pen="{DynamicResource IconPen}">
          <GeometryDrawing.Geometry>
            <PathGeometry Figures="M5 12h14" FillRule="NonZero"/>
          </GeometryDrawing.Geometry>
        </GeometryDrawing>
      </DrawingGroup>
    </DrawingImage.Drawing>
  </DrawingImage>

  <DrawingImage x:Key="Icon.Edit">
    <DrawingImage.Drawing>
      <DrawingGroup>
        <GeometryDrawing Brush="Transparent" Pen="{DynamicResource IconPen}">
          <GeometryDrawing.Geometry>
            <GeometryGroup>
              <PathGeometry Figures="M18 5L15.586 2.586A2 2 0 0 0 14.172 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2" FillRule="NonZero"/>
              <PathGeometry Figures="M21.378 12.626a1 1 0 0 0-3.004-3.004l-4.01 4.012a2 2 0 0 0-.506.854l-.837 2.87a.5.5 0 0 0 .62.62l2.87-.837a2 2 0 0 0 .854-.506z" FillRule="NonZero"/>
              <PathGeometry Figures="M8 18h1" FillRule="NonZero"/>
            </GeometryGroup>
          </GeometryDrawing.Geometry>
        </GeometryDrawing>
      </DrawingGroup>
    </DrawingImage.Drawing>
  </DrawingImage>

  <DrawingImage x:Key="Icon.Folder">
    <DrawingImage.Drawing>
      <DrawingGroup>
        <GeometryDrawing Brush="Transparent" Pen="{DynamicResource IconPen}">
          <GeometryDrawing.Geometry>
            <PathGeometry Figures="M20 20a2 2 0 0 0 2-2V8a2 2 0 0 0-2-2h-7.9a2 2 0 0 1-1.69-.9L9.6 3.9A2 2 0 0 0 7.93 3H4a2 2 0 0 0-2 2v13a2 2 0 0 0 2 2Z" FillRule="NonZero" />
          </GeometryDrawing.Geometry>
        </GeometryDrawing>
      </DrawingGroup>
    </DrawingImage.Drawing>
  </DrawingImage>

  <DrawingImage x:Key="Icon.Help">
    <DrawingImage.Drawing>
      <DrawingGroup>
        <!-- Outer Circle -->
        <GeometryDrawing Brush="Transparent" Pen="{DynamicResource IconPen}">
          <GeometryDrawing.Geometry>
            <PathGeometry Figures="M12 2a10 10 0 1 0 0.01 0Z" />
          </GeometryDrawing.Geometry>
        </GeometryDrawing>
        <!-- Question Mark Curve -->
        <GeometryDrawing Brush="Transparent" Pen="{DynamicResource IconPen}">
          <GeometryDrawing.Geometry>
            <PathGeometry Figures="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3" />
          </GeometryDrawing.Geometry>
        </GeometryDrawing>
        <!-- Dot at the Bottom -->
        <GeometryDrawing Brush="Transparent" Pen="{DynamicResource IconPen}">
          <GeometryDrawing.Geometry>
            <PathGeometry Figures="M12 17h.01" />
          </GeometryDrawing.Geometry>
        </GeometryDrawing>
      </DrawingGroup>
    </DrawingImage.Drawing>
  </DrawingImage>

  <DrawingImage x:Key="Icon.Info">
    <DrawingImage.Drawing>
      <DrawingGroup>
        <GeometryDrawing Brush="Transparent" Pen="{DynamicResource IconPen}">
          <GeometryDrawing.Geometry>
            <GeometryGroup>
              <EllipseGeometry Center="12,12" RadiusX="10" RadiusY="10"/>
              <PathGeometry Figures="M12 16v-4" FillRule="NonZero"/>
              <PathGeometry Figures="M12 8h.01" FillRule="NonZero"/>
            </GeometryGroup>
          </GeometryDrawing.Geometry>
        </GeometryDrawing>
      </DrawingGroup>
    </DrawingImage.Drawing>
  </DrawingImage>

  <DrawingImage x:Key="Icon.Open">
    <DrawingImage.Drawing>
      <DrawingGroup>
        <GeometryDrawing Brush="Transparent" Pen="{DynamicResource IconPen}">
          <GeometryDrawing.Geometry>
            <GeometryGroup>
              <PathGeometry Figures="M12 15V3" FillRule="NonZero"/>
              <PathGeometry Figures="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4" FillRule="NonZero"/>
              <PathGeometry Figures="M7 10L12 15L17 10" FillRule="NonZero"/>
            </GeometryGroup>
          </GeometryDrawing.Geometry>
        </GeometryDrawing>
      </DrawingGroup>
    </DrawingImage.Drawing>
  </DrawingImage>

  <DrawingImage x:Key="Icon.Save">
    <DrawingImage.Drawing>
      <DrawingGroup>
        <GeometryDrawing Brush="Transparent" Pen="{DynamicResource IconPen}">
          <GeometryDrawing.Geometry>
            <GeometryGroup>
              <PathGeometry Figures="M12 3v12" FillRule="NonZero"/>
              <PathGeometry Figures="M17 8L12 3L7 8" FillRule="NonZero"/>
              <PathGeometry Figures="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4" FillRule="NonZero"/>
            </GeometryGroup>
          </GeometryDrawing.Geometry>
        </GeometryDrawing>
      </DrawingGroup>
    </DrawingImage.Drawing>
  </DrawingImage>

  <DrawingImage x:Key="Icon.Select">
    <DrawingImage.Drawing>
      <DrawingGroup>
        <GeometryDrawing Brush="Transparent" Pen="{DynamicResource IconPen}">
          <GeometryDrawing.Geometry>
            <GeometryGroup>
              <PathGeometry Figures="M20,4 L9,15" FillRule="Nonzero"/>
              <PathGeometry Figures="M21,19 L3,19" FillRule="Nonzero"/>
              <PathGeometry Figures="M9,15 L4,10" FillRule="Nonzero"/>
            </GeometryGroup>
          </GeometryDrawing.Geometry>
        </GeometryDrawing>
      </DrawingGroup>
    </DrawingImage.Drawing>
  </DrawingImage>

  <DrawingImage x:Key="Icon.Sync">
    <DrawingImage.Drawing>
      <DrawingGroup>
        <GeometryDrawing Brush="Transparent" Pen="{DynamicResource IconPen}">
          <GeometryDrawing.Geometry>
            <GeometryGroup>
              <PathGeometry Figures="M21 12a9 9 0 0 0-9-9 9.75 9.75 0 0 0-6.74 2.74L3 8" FillRule="NonZero"/>
              <PathGeometry Figures="M3 3v5h5" FillRule="NonZero"/>
              <PathGeometry Figures="M3 12a9 9 0 0 0 9 9 9.75 9.75 0 0 0 6.74-2.74L21 16" FillRule="NonZero"/>
              <PathGeometry Figures="M16 16h5v5" FillRule="NonZero"/>
            </GeometryGroup>
          </GeometryDrawing.Geometry>
        </GeometryDrawing>
      </DrawingGroup>
    </DrawingImage.Drawing>
  </DrawingImage>

</ResourceDictionary>
