<UserControl x:Class="WinLibraryTool.UserControls.UserInputControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Loaded="UserControl_Loaded">
    <StackPanel Orientation="Horizontal">
		<TextBlock Text="{Binding LabelText}" Margin="0,3,5,0"></TextBlock>
		<TextBox x:Name="txtInput" Width="200" Text="{Binding Path=InputText, UpdateSourceTrigger=PropertyChanged}"></TextBox>
	</StackPanel>
</UserControl>
